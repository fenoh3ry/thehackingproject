<!DOCTYPE html>
<html>

<head>
  <% content_for :title, "Users" %>
</head>
<body>

<!-- MAIN BODY -->
  <div class="container py-4" style="margin-top: 20px">
    <h2 class="mb-4">List of all availables users</h2>
      <div class="row">
      <% @users.each do |user| %>

        <div class="mb-2 col-6 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <div class="card-body">
              <div class="pull-left d-flex user">
                    <div class="pull-left mr-2">
                        <img src="http://bootdey.com/img/Content/user_1.jpg" class="rounded-circle img-fluid" alt="user profile image" style="height:35px;width:35px">
                    </div>
                    <div class="title h5 pt-1">
                        <a href="<%= user_path(user.id) %>"><b><%= user.first_name %></b></a>
                    </div>
              </div>
            </div>
          </div>
        </div>

        <div>

      <% end %>
      </div>
  </div>

</body>

</html>

  